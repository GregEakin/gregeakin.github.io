@page "/"

@inject NavigationManager Navigation

<PageTitle>Blog</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<table class="table">
    <thead>
    <tr>
        <th>File Name</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            <a @onclick="() => NavigateToFile(file1)">@file1</a>
        </td>
    </tr>
    <tr>
        <td>
            <a @onclick="() => NavigateToFile(file2)">@file2</a>
        </td>
    </tr>
    </tbody>
</table>

@code {
    private string file1 = "fun-programming.md";
    private string file2 = "genetic-ai.md";

    private void NavigateToFile(string fileName)
    {
        Navigation.NavigateTo($"/markdown/{fileName}");
    }
}